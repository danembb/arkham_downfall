<p id="notice"><%= notice %></p>

<h1>Investigators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Deck link</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investigators.each do |investigator| %>
      <tr>
        <td><%= investigator.name %></td>
        <td><%= investigator.image %></td>
        <td><%= investigator.deck_link %></td>
        <td><%= investigator.team_id %></td>
        <td><%= link_to 'Show', investigator %></td>
        <td><%= link_to 'Edit', edit_investigator_path(investigator) %></td>
        <td><%= link_to 'Destroy', investigator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

