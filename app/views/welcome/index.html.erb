<br>
  <h1 style="text-align: center">Welcome to Arkham Downfall!</h1>
<div id="welcome-message" style="margin: 20px auto; width: 600px; padding: 20px; background-color: #707070; border-radius: 10px; position: relative;" h4 class="text-light"></h4>
  <h4 style="text-align: center">A custom weakness generator for your Arkham teams</h4>
<section class="py-5 text-center container">
<div id="login-form">
  <%= form_with url: login_path, method: :post, local: true do |f| %>
  <div class="row">
    <div class="col">
      <%= f.label :username %>
      <%= f.text_field :username %><br>
    </div>
      <div class="col">
        <%= f.label :password %>
        <%= f.password_field :password %><br>
      </div>
  </div>
  <%= f.submit "Log In", :class => 'btn' %>
</div>
<br>
<%= link_to "Register for an Account", registration_path %>
</div>
<% end %>
